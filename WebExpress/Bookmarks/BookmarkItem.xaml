<UserControl x:Class="WebExpress.Bookmarks.BookmarkItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebExpress.Bookmarks"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="172" MouseDown="UserControl_MouseDown" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave">
    <Grid x:Name="Grid" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave">
        <Button x:Name="button" HorizontalAlignment="Right" VerticalAlignment="Top" Width="20" Height="20" Background="{x:Null}" BorderBrush="{x:Null}" Margin="0,10,10,0" Click="close_click">
            <Image Source="pack://application:,,,/Resources/close_button.png"></Image>
        </Button>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Margin="44,37,0,37"/>
        <Image Source="/WebExpress;component/Resources/menu.png" HorizontalAlignment="Left" VerticalAlignment="Center" x:Name="image" Height="16" Width="16" Margin="15,0,0,0"/>
    </Grid>
</UserControl>
